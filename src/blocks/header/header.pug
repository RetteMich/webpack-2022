mixin header(isLogin)
    .header__body
        .header__logo
            +logo
        nav.header__navigation
            +header__navigation({
                navigationList: [
                    {text: "О нас", active: true},
                    {text: "Услуги", dropdown: true},
                    {text: "Вакансии"},
                    {text: "Новости"},
                    {text: "Соглашения", dropdown: true}
                    ]
                })
        .header__authorization
            if (isLogin)
                .button
                    .button__button-sign-in
                        +button 
                    .button__button-sign-up
                        +button
            else 
                .header__authorization_authorized
                    .username Юлий Цезарь